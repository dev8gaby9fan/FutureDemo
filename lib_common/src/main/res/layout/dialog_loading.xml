<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/abc_dp_10">
    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="@dimen/abc_dp_60"
        android:layout_height="@dimen/abc_dp_60"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/abc_dp_20"
        android:indeterminateBehavior="repeat"
        android:indeterminateDrawable="@drawable/drawable_loading" />

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/abc_dp_5"
        android:textSize="@dimen/abc_sp_16"
        android:text="加载中..." />
</LinearLayout>