<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="@dimen/abc_dp_60"
    android:paddingLeft="@dimen/abc_dp_10"
    android:paddingRight="@dimen/abc_dp_10"
    >

    <TextView
        android:id="@+id/tv_ins_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="bottom"
        android:textColor="@color/dark_deep"
        app:layout_constraintBottom_toTopOf="@+id/tv_ins_short_id"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_ins_price"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tv_ins_short_id"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintLeft_toLeftOf="@id/tv_ins_name"
        app:layout_constraintRight_toRightOf="@id/tv_ins_name"
        app:layout_constraintTop_toBottomOf="@id/tv_ins_name"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="top"
        android:textColor="@color/dark_light"
        />

    <TextView
        android:id="@+id/tv_ins_price"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="right|bottom"
        app:layout_constraintBottom_toTopOf="@id/tv_ins_pre_settlement"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintLeft_toRightOf="@id/tv_ins_name"
        app:layout_constraintRight_toLeftOf="@id/tv_ins_updown"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tv_ins_pre_settlement"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="@id/tv_ins_price"
        app:layout_constraintRight_toRightOf="@id/tv_ins_price"
        app:layout_constraintTop_toBottomOf="@id/tv_ins_price"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_weight="1"
        android:gravity="top|right"
        />
    <TextView
        android:id="@+id/tv_ins_updown"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="right|bottom"
        app:layout_constraintBottom_toTopOf="@id/tv_ins_updown_ratio"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintLeft_toRightOf="@id/tv_ins_price"
        app:layout_constraintRight_toLeftOf="@id/tv_ins_vol"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tv_ins_updown_ratio"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="@id/tv_ins_updown"
        app:layout_constraintRight_toRightOf="@id/tv_ins_updown"
        app:layout_constraintTop_toBottomOf="@id/tv_ins_updown"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_weight="1"
        android:gravity="top|right"
        />
    <TextView
        android:id="@+id/tv_ins_vol"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="bottom|right"
        app:layout_constraintBottom_toTopOf="@id/tv_ins_pre_io"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintLeft_toRightOf="@id/tv_ins_updown"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_ins_pre_io"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="@id/tv_ins_vol"
        app:layout_constraintRight_toRightOf="@id/tv_ins_vol"
        app:layout_constraintTop_toBottomOf="@id/tv_ins_vol"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_weight="1"
        android:gravity="top|right"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
