<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/abc_dp_40"
    android:showDividers="middle"
    android:divider="@drawable/divider_horizontal"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/tv_ins_name"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:textColor="@color/dark_deep"
        android:textSize="@dimen/abc_sp_14"
        android:gravity="center"
        tools:text="原油2006"
        />
    <TextView
        android:id="@+id/tv_offset"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_height="match_parent"
        android:textColor="@color/dark_deep"
        android:textSize="@dimen/abc_sp_14"
        android:gravity="center"
        tools:text="开"
        />
    <TextView
        android:id="@+id/tv_order_price"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_height="match_parent"
        android:textColor="@color/dark_deep"
        android:textSize="@dimen/abc_sp_14"
        android:gravity="center"
        tools:text="456.2"
        />
    <TextView
        android:id="@+id/tv_order_volume"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_height="match_parent"
        android:textColor="@color/dark_deep"
        android:textSize="@dimen/abc_sp_14"
        android:gravity="center"
        tools:text="10"
        />
    <TextView
        android:id="@+id/tv_with_draw"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_height="match_parent"
        android:textColor="@color/dark_deep"
        android:textSize="@dimen/abc_sp_14"
        android:gravity="center"
        tools:text="10"
        />
</LinearLayout>