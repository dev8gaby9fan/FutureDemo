<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:divider="@drawable/divider_horizontal"
    android:showDividers="middle"
    android:layout_width="match_parent"
    android:layout_height="@dimen/abc_dp_40"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_ins_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/dark_deep"
        android:textSize="@dimen/abc_sp_14"
        tools:text="原油2006"
        />
    <TextView
        android:id="@+id/tv_direct"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:gravity="center"
        android:textColor="@color/dark_deep"
        android:textSize="@dimen/abc_sp_14"
        tools:text="买"
        />
    <TextView
        android:id="@+id/tv_offset"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/dark_deep"
        android:textSize="@dimen/abc_sp_14"
        tools:text="开"
        />
    <TextView
        android:id="@+id/tv_status"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/dark_deep"
        android:textSize="@dimen/abc_sp_14"
        tools:text="状态"
        />
    <TextView
        android:id="@+id/tv_price"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/dark_deep"
        android:textSize="@dimen/abc_sp_14"
        tools:text="价格"
        />
    <TextView
        android:id="@+id/tv_volume"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/dark_deep"
        android:textSize="@dimen/abc_sp_14"
        tools:text="委托量"
        />
    <TextView
        android:id="@+id/tv_trade_volume"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/dark_deep"
        android:textSize="@dimen/abc_sp_14"
        tools:text="成交量"
        />
    <TextView
        android:id="@+id/tv_with_draw"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/dark_deep"
        android:textSize="@dimen/abc_sp_14"
        tools:text="挂单量"
        />
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/dark_deep"
        android:textSize="@dimen/abc_sp_14"
        tools:text="委托时间"
        />
    <TextView
        android:id="@+id/tv_hedge"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/dark_deep"
        android:textSize="@dimen/abc_sp_14"
        tools:text="投保"
        />
    <TextView
        android:id="@+id/tv_smsg"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textColor="@color/dark_deep"
        android:textSize="@dimen/abc_sp_14"
        tools:text="状态信息"
        />
</LinearLayout>