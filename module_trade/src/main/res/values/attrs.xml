<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 开平标志 -->
    <attr name="combOffset" format="enum">
        <enum name="open" value="48"/>
        <enum name="close" value="49"/>
        <enum name="closeToday" value="51"/>
        <enum name="closeYesterday" value="52"/>
    </attr>
    <attr name="direction" format="enum">
        <enum name="buy" value="48"/>
        <enum name="sell" value="49"/>
    </attr>
    <declare-styleable name="OrderButton">
        <attr name="orderPrice" format="string"/>
        <attr name="orderText" format="string"/>
        <attr name="textColor" format="color"/>
        <attr name="textSize" format="dimension"/>
        <attr name="combOffset"/>
        <attr name="direction"/>
    </declare-styleable>

    <declare-styleable name="FutureKeyboardView">
        <!-- 按键背景 -->
        <attr name="keyDrawable" format="reference"/>
        <!-- 按键文字大小-->
        <attr name="keyTextSize" format="dimension"/>
        <!-- 按键文字颜色 -->
        <attr name="keyTextColor" format="reference"/>
    </declare-styleable>
</resources>